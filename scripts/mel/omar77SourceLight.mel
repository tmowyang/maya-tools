/* script for creating 3 Lights in your Scene ,the preparatory of the keyLight             is with Depth Map Shadows,            resolution = 2000 , Filter Size = 2 , Bias = 0,2       press the button RUN and    the script will group all objects in one group , and scale them ,create a     camera   with resolution Gate , frame all opjects , and 3 Light will appear in the right     Position.   finally you can  render when you press the render button.         thank you for using my FIRST SCRIPT :-)  and sorry for bad english   all rights recieved by omar77       omaqas@yahoo.com*/window -title"3SourceLight"; 	columnLayout -columnAttach "both" 5 -rowSpacing 10 -columnWidth 250; 	button -label "run" -command "omar77SourceLight" runButtom; 	button -label "render" -command"RenderIntoNewWindow;" render; 	showWindow;global proc omar77SourceLight (){	   select -all;   group; xform -os -piv 0 0 0;   scale 0.5 0.5 0.5;   camera;   move 0 5 0;   lookThroughModelPanelClipped camera1 modelPanel4 0.001 1000;   FrameSelected;   fitPanel -selected;   camera -e -displayFilmGate off -displayResolution on -overscan 1.3 camera1;   defaultDirectionalLight (1.2, 0.9,1,0.99, "1", 0,0,0);   rename |directionalLight1|directionalLightShape1 "keylight";   setAttr "keylight.dmapResolution" 2000;   setAttr "keylight.dmapFilterSize" 2;   setAttr "keylight.dmapBias" 0.2;   move -r 16 16 11 ;   rotate -r -os -32 52 0 ;   defaultDirectionalLight (0.8, 1 ,0.9, 0.8, "0", 0,0,0);   move -r -7 9 9 ;   rotate -r -os -40 -20 40 ;   defaultPointLight(0.4, 1,1,0.8, 0, 0, 0,0,0, 1);   move 0 5 -14;   select -cl  ;}